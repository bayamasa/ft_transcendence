# https://nodejs.org/ja LTS„ÅØ18.15
FROM node:18.15-buster-slim

RUN apt-get update -y && apt-get install -y openssl \
    procps  

WORKDIR /app

COPY package*.json .
COPY prisma .
RUN npx prisma generate

RUN npm install

COPY . .

RUN npm run build

EXPOSE 3000

COPY ./scripts/entrypoint.sh /app/

ENTRYPOINT [ "bash", "entrypoint.sh" ]
